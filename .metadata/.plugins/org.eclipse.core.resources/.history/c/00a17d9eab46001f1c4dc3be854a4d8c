package day3;

public class Switch {

	public static void main(String[] args) {
		/* if:  if(boolean condition){
		 * 		block of code or statment
		 * 		}	 
		 * else if
		 * switch
		 */
		
		/*  if(boolean condition)
			{ 
			block of statement
			}
		*/

		// Ex1:
		if(true) {
			System.out.println("We speak the truth.");
		}
		System.out.println("Starting with conditional statement.");
		
		// Ex2:
		int personAge = 10;
		if(personAge >= 18) {
			System.out.println("Eligible to vote.");
		}else {
			System.out.println("Not eligible to vote.");
		}
		System.out.println("End of the program.");
		
			
		
		
		
	}

}
