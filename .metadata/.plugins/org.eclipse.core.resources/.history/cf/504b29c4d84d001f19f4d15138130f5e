package day4;

import java.util.Arrays;

public class Array {

	public static void main(String[] args) {
		//Declaring an array
		//Way 1:
		//int myArray[] = new int[5];
		int[]myArray = new int[5];
		//Assign values to array
		myArray[0] = 10;
		myArray[1] = 20;
		myArray[2] = 30;
		myArray[3] = 40;
		myArray[4] = 50;
		
		//Extract value from array
		System.out.println(myArray[4]); //50
		//Finding out length of array
		int length = myArray.length;
		System.out.println("The length is " + length); //The length is 5
		
		//Way2:
		int a[]= {1,2,3,4,5};
		System.out.println(a[4]); // 5
		//Extracting all values out of the array
		System.out.println(Arrays.toString(myArray));  //[10, 20, 30, 40, 50]
		//Print all values using for loop
		for(int i=0; i<5; i++) {
			System.out.println(myArray[i]); // 1,2,3,4,5
		}
		
		//Use enhance for loop to print all values out of the array
		System.out.println("******Using enhanced for loop******");
		for(int mA:myArray) {
			System.out.println(mA); // 10, 20, 30,,40,,50
		}
		
	}
	
	
	
	
}
