package day3;

public class ai2_2 {

	public static void main(String[] args) {


		String name = "Mochi";
		String city = "Lala Land";
		int age = 5;
		String college = "Buldak Carbonara";
		int graduationYear = 2024;
		String profession = "Billionaire"; 
		String personCategory = "panda";
		String personName = "KungfuPanda";

		
		System.out.println("Once there was a person named " + name + " who lived in " + city + " . At the age of " + "\n" +
		age + ", "  + name + " went to college at " + college + ". " + name + " graduated in " + graduationYear + 
		" and took up a job as a " + profession + ". Then, " + name + " came across a(n) " + personCategory + 
		" named " + personName + " .");

	}

}
