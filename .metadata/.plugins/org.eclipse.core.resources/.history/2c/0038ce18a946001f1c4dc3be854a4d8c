package day2;

public class If {

	public static void main(String[] args) {
		/* if:  if(boolean condition){
		 * 		block of code or statment
		 * 		}	 
		 * else if
		 * switch
		 */

		// Ex1:
		if(true) {
			System.out.println("We speak the truth.");
		}
		
		// Ex2:
		int personAge = 10;
		if(personAge >= 18) {
			System.out.println("Eligible to vote.");
		}
		System.out.println("End of the program.");
		
			
		
		
		
	}

}
